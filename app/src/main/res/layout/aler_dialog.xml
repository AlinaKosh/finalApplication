<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:elevation="2dp"
    android:outlineAmbientShadowColor="@color/endGreenColor"
    android:outlineSpotShadowColor="@color/endGreenColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#E6E3A9">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/msr"
            android:text="Выбор Локации"
            android:textColor="@color/endGreenColor"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:textSize="20sp"
            android:fontFamily="@font/msr"
            android:text="Хотите Ли Вы Продолжить Работу С Этой Выбранной Страной?"
            android:textColor="@color/black"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_consel"
                android:layout_width="110dp"
                android:layout_height="65dp"
                android:layout_margin="16dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/white"
                android:text="Закрыть"
                android:textSize="16sp"
                android:fontFamily="@font/msr"
                android:background="@drawable/btn_green_90"
                android:elevation="2dp"
                android:outlineAmbientShadowColor="@color/endGreenColor"
                android:outlineSpotShadowColor="@color/endGreenColor"
                app:layout_constraintEnd_toStartOf="@+id/btn_yes"
                tools:ignore="MissingConstraints" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_yes"
                android:layout_width="110dp"
                android:layout_height="65dp"
                android:layout_margin="16dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/white"
                android:text="Да"
                android:textSize="16sp"
                android:fontFamily="@font/msr"
                android:background="@drawable/btn_green_90"
                android:elevation="2dp"
                android:outlineAmbientShadowColor="@color/endGreenColor"
                android:outlineSpotShadowColor="@color/endGreenColor"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>